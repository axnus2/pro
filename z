<script>
// Support Us Popup with 4-second countdown, URL redirection, and 6-hour cooldown
document.addEventListener('DOMContentLoaded', function() {
    // Function to get page-specific storage key
    function getPageKey() {
        return 'popupShown_' + window.location.pathname;
    }

    // Check if popup was shown for this page in the last 6 hours
    const pageKey = getPageKey();
    const popupShownTime = localStorage.getItem(pageKey);
    const currentTime = new Date().getTime();
    const sixHours = 6 * 60 * 60 * 1000; // 6 hours in milliseconds

    if (!popupShownTime || (currentTime - popupShownTime) > sixHours) {
        showPopup();
    }

    function showPopup() {
        // Create popup elements with enhanced styling
        const popupHTML = `
        <div id="popup-overlay" style="
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.85);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            backdrop-filter: blur(5px);
            animation: fadeIn 0.5s ease-out;
        ">
            <div id="popup-content" style="
                background: linear-gradient(145deg, #1a1a2e, #16213e);
                padding: 40px;
                border-radius: 15px;
                text-align: center;
                max-width: 500px;
                width: 90%;
                box-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
                border: 1px solid rgba(0, 255, 255, 0.2);
                position: relative;
                overflow: hidden;
                animation: slideUp 0.5s ease-out;
            ">
                <div style="
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 4px;
                    background: linear-gradient(90deg, #00ffcc, #00fffc, #00ccff);
                "></div>
                
                <h2 style="
                    color: #00fffc;
                    font-size: 28px;
                    margin-bottom: 15px;
                    text-shadow: 0 0 10px rgba(0, 255, 252, 0.5);
                    font-family: 'Arial', sans-serif;
                ">Support Our Work</h2>
                
                <p style="
                    color: #ffffff;
                    font-size: 16px;
                    line-height: 1.6;
                    margin-bottom: 25px;
                ">We're committed to providing quality content. Your support helps us keep going!</p>
                
                <button id="support-btn" style="
                    background: linear-gradient(45deg, #00ffcc, #00ccff);
                    color: #111;
                    padding: 15px 40px;
                    border: none;
                    border-radius: 50px;
                    font-size: 18px;
                    font-weight: bold;
                    cursor: pointer;
                    margin-top: 10px;
                    transition: all 0.3s ease;
                    box-shadow: 0 0 15px rgba(0, 204, 255, 0.5);
                    position: relative;
                    overflow: hidden;
                ">SUPPORT NOW</button>
                
                <div id="countdown" style="
                    margin-top: 20px;
                    font-size: 16px;
                    color: rgba(255,255,255,0.7);
                    display: none;
                    animation: pulse 1s infinite alternate;
                ">Please open the ads page sometime. Closing in <span id="countdown-number" style="
                    color: #00fffc;
                    font-weight: bold;
                ">4</span> seconds...</div>
                
                <div style="
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    width: 100%;
                    height: 4px;
                    background: linear-gradient(90deg, #00ffcc, #00fffc, #00ccff);
                "></div>
            </div>
        </div>

        <style>
            @keyframes fadeIn {
                from { opacity: 0; }
                to { opacity: 1; }
            }
            
            @keyframes slideUp {
                from { transform: translateY(20px); opacity: 0; }
                to { transform: translateY(0); opacity: 1; }
            }
            
            @keyframes pulse {
                from { opacity: 0.7; }
                to { opacity: 1; }
            }
            
            @keyframes neonGlow {
                0% { box-shadow: 0 0 10px rgba(0, 255, 252, 0.7); }
                50% { box-shadow: 0 0 20px rgba(0, 255, 252, 0.9), 0 0 30px rgba(0, 204, 255, 0.5); }
                100% { box-shadow: 0 0 10px rgba(0, 255, 252, 0.7); }
            }
            
            #support-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 0 25px rgba(0, 204, 255, 0.8);
                animation: neonGlow 1.5s infinite;
            }
            
            #support-btn:active {
                transform: translateY(1px);
            }
            
            #support-btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
                transition: 0.5s;
            }
            
            #support-btn:hover::before {
                left: 100%;
            }
        </style>`;

        // Add popup to the page
        document.body.insertAdjacentHTML('beforeend', popupHTML);

        // Handle support button click
        document.getElementById('support-btn').addEventListener('click', function() {
            // Store the current time for this page
            localStorage.setItem(pageKey, currentTime.toString());
            
            // Open the ad URL in new tab
            window.open('https://staunchtownsegg.com/xi7nvp42w?key=c7e203300673013b206701b3857ddf28', '_blank');
            
            // Show message and countdown
            const countdownEl = document.getElementById('countdown');
            const countdownNumber = document.getElementById('countdown-number');
            countdownEl.style.display = 'block';
            this.style.pointerEvents = 'none';
            
            // Change button text
            this.textContent = 'THANK YOU!';
            
            // 4-second countdown
            let seconds = 4;
            countdownNumber.textContent = seconds;
            
            const countdownInterval = setInterval(function() {
                seconds--;
                countdownNumber.textContent = seconds;
                
                if (seconds <= 0) {
                    clearInterval(countdownInterval);
                    document.getElementById('popup-overlay').style.animation = 'fadeIn 0.5s ease-out reverse';
                    setTimeout(() => {
                        document.getElementById('popup-overlay').remove();
                    }, 500);
                }
            }, 1000);
        });
    }
});
</script>
